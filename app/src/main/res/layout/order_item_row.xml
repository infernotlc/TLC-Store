<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/orderTotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: $0.00"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orderDiscountedTotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discounted Total: $0.00" />

    <TextView
        android:id="@+id/orderTotalProductsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Products: 0" />

    <TextView
        android:id="@+id/orderTotalQuantityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Quantity: 0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderProductsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false" />

</LinearLayout>
